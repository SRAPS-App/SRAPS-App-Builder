MDScreen:
	name:"Sscreen"
	md_bg_color:1,1,1,1
	MDLabel:
		pos_hint:{"center_x":0.5,"center_y":0.85}
		text:"Welcome to SRAPS App!"
		font_name:"assets/Poppins-Regular.ttf"
		font_size:"35sp"
		halign:"center"
	AnchorLayout:
		Image:
			source:"assets/wel.jpg"
			size_hint:None,None
			keep_ratio:True
			allow_stretch:True
			size:"350dp","300dp"
	RelativeLayout:
		MyMDCard:
			md_bg_color:app.theme_cls.primary_light
			pos_hint:{"center_x":0.5,"center_y":0.08}
