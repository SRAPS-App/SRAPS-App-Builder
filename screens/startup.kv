MDScreen:
	name:"Sscreen2"
	md_bg_color:1,1,1,1
	MDLabel:
		pos_hint:{"center_x":0.5,"center_y":0.85}
		text:"What's your Admission No.?"
		font_name:"assets/Poppins-Regular.ttf"
		font_size:"25sp"
		halign:"center"
		
	RelativeLayout:
		AnchorLayout:
			anchor_y:"top"
			anchor_x:"left"
			MDIconButton:
				icon:"chevron-left"		
				on_press:app.screen_manager.current = "Sscreen1"	
	RelativeLayout:
		AnchorLayout:
			pos_hint:{"center_x":0.5,"center_y":0.44}
			anchor_y:"bottom"
			Image:
				source:"assets/wel2.jpg"
				size_hint:None,None
				keep_ratio:True
				allow_stretch:True
				size:"300dp","300dp"

		MDFlatButton:
			size_hint:None,None
			size:dp(150),"50dp"
			pos_hint:{"center_x":0.5,"center_y":0.48}
			text:"Proceed"
			md_bg_color:app.theme_cls.primary_light
			line_color:app.theme_cls.primary_light
			on_press:app.get_admno() if admno.text != ""  and "-"  in str(ran.text) or len(ran.text) is not 10 else app.Toast("Fill select and fill both required fields correctly")		
	MDBoxLayout:
		pos_hint:{"center_x":0.5,"center_y":0.7}
		size_hint:None,None
		size:dp(200),"50dp"
		MDTextField:
			id:admno
			hint_text:"Admission Number"	
			mode: "rectangle"
			max_text_length: 4
			font_name:"assets/Poppins-Regular.ttf"
			font_name_hint_text:"assets/Poppins-Regular.ttf"
	MDBoxLayout:
		pos_hint:{"center_x":0.5,"center_y":0.58}
		size_hint:None,None
		size:dp(200),"50dp"
		MDTextField:
			id:ran
			hint_text:"Enter dob yyyy-mm-dd "	
			mode: "rectangle"
			max_text_length: 10
			font_name:"assets/Poppins-Regular.ttf"
			font_name_hint_text:"assets/Poppins-Regular.ttf"
												