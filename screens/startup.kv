MDScreen:
	name:"Sscreen2"
	MDLabel:
		pos_hint:{"center_x":0.5,"center_y":0.85}
		text:"What's your Admission No.?"
		font_name:"assets/Poppins-Regular.ttf"
		font_size:"25sp"
		halign:"center"	
	RelativeLayout:
		AnchorLayout:
			anchor_y:"top"
			anchor_x:"left"
			MDIconButton:
				icon:"chevron-left"		
				on_press:app.screen_manager.current = "Sscreen1"	
	RelativeLayout:
		AnchorLayout:
			pos_hint:{"center_x":0.5,"center_y":0.35}
			anchor_y:"bottom"
			Image:
				source:"assets/wel3.png"
				size_hint:None,None
				keep_ratio:True
				allow_stretch:True
				size:"400dp","400dp"	
	MDBoxLayout:
		pos_hint:{"center_x":0.5,"center_y":0.65}
		size_hint:None,None
		size:dp(200),"50dp"
		MDTextField:
			id:admno
			hint_text:"Admission Number"	
			mode: "rectangle"
			max_text_length: 4
			font_name:"assets/Poppins-Regular.ttf"
			font_name_hint_text:"assets/Poppins-Regular.ttf"
	MDRoundFlatButton:
		size_hint:None,None
		size:dp(150),"50dp"
		pos_hint:{"center_x":0.5,"center_y":0.55}
		text:"Search"
		md_bg_color:app.theme_cls.accent_light
		line_color:app.theme_cls.accent_light
		on_press:app.get_admno()
												