#: import Window kivy.core.window.Window
MDScreen:
    name:"Tscreen"
	MDBottomNavigation:
		id:bot
		font_name:"assets/Poppins-Regular.ttf"
		_label_font_size:"14sp"
		selected_color_background:app.theme_cls.bg_normal
		panel_color:app.theme_cls.bg_light
		MDBottomNavigationItem:
			md_bg_color:app.theme_cls.bg_light
			name: "screen1"
			icon:"home"
			text:"Home"
			font_name:"assets/Lato-Italic.ttf"
			_label_font_size: "12sp"
			inactive_font_size: "10sp"
			ScrollView:
				MDBoxLayout:
					md_bg_color:0,0,0,0
					orientation:"vertical"
					size_hint_y:None
					adaptive_height:True
					MDRelativeLayout:
						size_hint:None,None
						size:app.y,"300dp"
						BoxLayout:						
							MyMDCard:
								id:oo
								md_bg_color:app.theme_cls.primary_light
								radius:[0,0,dp(20),dp(20)]
								size_hint:None,None
								size:app.y,"300dp"							
								MDRelativeLayout:
									orientation:"vertical"
									radius:[0,0,dp(20),dp(20)]
									FitImage:
										radius:[0,0,dp(20),dp(20)]
										source:"assets/g-b.jpg"
										allow_stretch:True
										keep_ratio:False
										size:oo.width,oo.height
									FitImage:
										id:rimg
										radius:[0,0,dp(20),dp(20)]
										invert_y_axis:True
										source:"assets/shadow-black.png" if app.theme_cls.theme_style == "Dark" else "assets/shadow-white.png"
										allow_stretch:True
										keep_ratio:False
										size:oo.width,oo.height
          
		MDBottomNavigationItem:
			md_bg_color:app.theme_cls.bg_light
			name: "screen2"
			icon:"cog-outline"
			text:"Settings"
			font_name:"assets/Lato-Italic.ttf"
			_label_font_size: "12sp"
			inactive_font_size: "10sp"
			MyMDCard:
				radius:"40dp"
				id:t4
				height:20
				elevation:10
				padding: dp(8)
				size_hint: None, None
				size: app.y, "410dp"
				style:'elevated'
				pos_hint:{"center_x":0.5,"center_y":0.75}
				md_bg_color:app.theme_cls.bg_normal

			MDLabel:
				text:"Settings"
				font_name:"assets/Poppins-ExtraBold.ttf"
				font_size:"30sp"
				halign:"center"
				pos_hint:{"center_x":0.5,"center_y":0.90}
			MyMDCard:
				radius:"40dp"
				elevation:30
				padding:dp(16)
				size_hint: None, None
				size: app.y, Window.size[1]
				style:'elevated'
				pos_hint:{"center_x":0.5,"center_y":0.25}
				MDGridLayout:
					cols:1
					MyMDCard:
						radius:70
						padding:dp(8)
						size_hint: None, None
						size: app.y-dp(30), "50dp"
						elevation:0
						#style:'elevated'
						md_bg_color:0,0,0,0
						MDLabel:
							text:"Save Debug logs"
							font_name:"assets/Poppins-Regular.ttf"
							font_size:"15sp"
						MDSwitch:
							id :hi
							widget_style: "ios"
							halign:'center'
							width: dp(30)
							active:app.update
							on_active:app.settings.writeSettings("logs","False") if self.active is False else app.settings.writeSettings("logs","True")
					MyMDCard:
						radius:70
						padding: dp(8)
						size_hint_x:None
						size_hint_y:None
						size: app.y-dp(30), "50dp"
						elevation:0
						md_bg_color:0,0,0,0
						MDLabel:
							text:"Dark Mode"
							font_name:"assets/Poppins-Regular.ttf"
							font_size:"15sp"


						MDSwitch:
						
							id :hi
							widget_style: "ios"
							halign:'center'
							width: dp(30)
							active:app.update
							on_active: app.theme()
					MyMDCard:
						radius:70
						padding: dp(8)
						size_hint: None, None
						size: app.y, "50dp"
						elevation:0
						ripple_behavior:True
						on_press:app.show_theme_picker()					
						md_bg_color:0,0,0,0
						MDLabel:
							text:"Change Theme"
							font_name:"assets/Poppins-Regular.ttf"
							font_size:"15sp"
						MDIconButton:
							icon:"chevron-right"
							on_press:app.show_theme_picker()
					MyMDCard:
						radius:70
						padding: dp(8)
						size_hint: None, None
						size: app.y, "50dp"
						elevation:0
						ripple_behavior:True
						on_press:app.update_menu()					
						md_bg_color:0,0,0,0
						MDLabel:
							text:"Check For Update"
							font_name:"assets/Poppins-Regular.ttf"
							font_size:"15sp"
						MDIconButton:
							icon:"chevron-right"
							on_press:app.update_menu()													
					MyMDCard:
						radius:70
						padding: dp(8)
						size_hint: None, None
						size: app.y, "50dp"
						elevation:0
						ripple_behavior:True
						on_press:app.about_menu()					
						md_bg_color:0,0,0,0
						MDLabel:
							text:"About Us"
							font_name:"assets/Poppins-Regular.ttf"
							font_size:"15sp"
						MDIconButton:
							icon:"chevron-right"
							on_press:app.about_menu()
					MyMDCard:
						radius:70
						padding: dp(8)
						size_hint: None, None
						size: app.y, "50dp"
						elevation:0
						ripple_behavior:True
						on_press:app.myc()					
						md_bg_color:0,0,0,0
						MDLabel:
							text:"More"
							font_name:"assets/Poppins-Regular.ttf"
							font_size:"15sp"
						MDIconButton:
							id:hy3
							icon:"chevron-right"
							on_press:app.myc()
					MDBoxLayout:
						id:hy4		
						radius:(70,)
						padding: dp(8)
						spacing:30
						size_hint: None, None
						size: app.y, "50dp"
						orientation:"horizontal"
						MDRoundFlatButton:
							id:a890
							size:(self.width,self.height)
							text:"Share App"
							icon:"share"
							icon_color:0,0,0,0
							text_color:0,0,0,0
							line_color:0,0,0,0
							line_width:2
						MDRoundFlatButton:
							id:a891
							size:(self.width,self.height)
							icon_color:0,0,0,0
							text_color:0,0,0,0
							line_color:0,0,0,0
							line_width:2							
							text:"Rate Us"
							icon:"share"																

			MDLabel:
				pos_hint:{"center_x":0.5,"center_y":0.10}
				halign:"center"
				text:" Application v"+app.__version__+" Running on Python v"+app.python_version
				theme_text_color:"Hint" 
				font_name:"assets/Poppins-Regular.ttf"
				font_size:"15sp"